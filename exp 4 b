#include<iostream>
#include<string>
#include<bitset>
using namespace std;
int main ()
{
  int number,i,j,k,set,reset;
  string binary;

  cout<<("Enter a number: ");
  cin>>number;
 binary = bitset<8>(number).to_string();
  cout<<"\n Entered number was converted" <<number<<" the converted number is : "<<binary;
  j|=(1<<number);
  k&= (1<< number);
  set = number|j;
  reset = number&k;

  cout<<"\nsSetting the bit:"<<set;
  cout<<"\nResetting the bit:"<<reset;  

}

OUTPUT:
